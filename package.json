{
  "name": "wandertext-server",
  "version": "0.4.9",
  "description": "Serve semantically rich geospatial datasets.",
  "repository": "git@github.com:wandertext/wandertext-server.git",
  "author": "Moacir P. de SÃ¡ Pereira <moacir.p@columbia.edu> (http://moacir.com)",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test:all": "npx mocha spec/**/*.spec.js",
    "test:rules": "npx mocha spec/rules/*.spec.js --reporter nyan --color true",
    "build:main": "babel -q --copy-files --out-dir dist --ignore *.test.js src",
    "build": "webpack",
    "start": "node dist/index.js",
    "serve": "nodemon dist/index.js",
    "lint": "xo *.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.4",
    "@babel/node": "^7.5.5",
    "@babel/preset-env": "^7.5.4",
    "@firebase/testing": "^0.11.9",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.1",
    "webpack": "^4.39.1",
    "webpack-cli": "^3.3.6",
    "xo": "^0.24.0"
  },
  "dependencies": {
    "@google-cloud/firestore": "^2.2.4",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "fortune": "^5.5.17",
    "fortune-http": "^1.2.25",
    "fortune-json-api": "^2.2.0"
  },
  "xo": {
    "envs": [
      "amd"
    ],
    "prettier": true,
    "space": true,
    "rules": {
      "require-await": 0,
      "no-await-in-loop": 0,
      "quotes": [
        "error",
        "double"
      ]
    },
    "overrides": [
      {
        "files": "spec/**/*.spec.js",
        "rules": {
          "prefer-arrow-callback": 0,
          "import/no-unassigned-import": 0
        },
        "envs": [
          "mocha"
        ]
      }
    ]
  },
  "prettier": {
    "singleQuote": false,
    "bracketSpacing": true
  }
}
