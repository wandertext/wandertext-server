{
  "name": "wandertext-server",
  "version": "0.6.0",
  "description": "Serve semantically rich geospatial datasets.",
  "repository": "git@github.com:wandertext/wandertext-server.git",
  "author": "Moacir P. de SÃ¡ Pereira <moacir.p@columbia.edu> (http://moacir.com)",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test:all": "npx mocha spec/**/*.spec.js",
    "test:rules": "npx mocha spec/rules/*.spec.js --reporter nyan --color true",
    "clean": "rimraf dist/",
    "build": "yarn clean && babel -q --copy-files --out-dir dist --ignore *.test.js src",
    "build:tsc": "tsc",
    "start": "node dist/index.js",
    "serve": "nodemon --exec babel-node src/index.js",
    "deploy:server": "yarn build && gcloud app deploy",
    "release": "standard-version --dry-run",
    "lint": "xo *.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.10.3",
    "@babel/node": "^7.5.5",
    "@babel/preset-env": "^7.6.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^7.0.0",
    "nodemon": "^2.0.2",
    "pg": "^7.17.0",
    "pg-hstore": "^2.3.3",
    "rimraf": "^3.0.0",
    "sequelize": "^7.0.0-next.1",
    "sequelize-cli": "^5.5.1",
    "standard-version": "^7.0.0",
    "tslint": "^5.19.0",
    "typescript": "^3.7.5",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.7",
    "xo": "^0.25.3"
  },
  "dependencies": {
    "apollo-server-express": "^2.9.15",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^14.5.8",
    "graphql-iso-date": "^3.6.1",
    "graphql-tag": "^2.10.1",
    "graphql-type-json": "^0.3.0"
  },
  "xo": {
    "envs": [
      "amd"
    ],
    "prettier": true,
    "space": true,
    "rules": {
      "require-await": 0,
      "no-await-in-loop": 0,
      "quotes": [
        "error",
        "double"
      ]
    },
    "overrides": [
      {
        "files": "spec/**/*.spec.js",
        "rules": {
          "prefer-arrow-callback": 0,
          "import/no-unassigned-import": 0
        },
        "envs": [
          "mocha"
        ]
      }
    ]
  },
  "prettier": {
    "singleQuote": false,
    "bracketSpacing": true
  }
}
